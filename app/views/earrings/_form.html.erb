<%= simple_form_for(@earring, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :brand %>
    <%= f.input :color %>
    <%= f.input :matched %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
